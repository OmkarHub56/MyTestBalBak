<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:background="@drawable/setting_bg_rad">

    <ImageView
        android:id="@+id/close_dialog_btn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_30sdp"
        android:src="@drawable/down_arrow"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_5sdp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_8sdp">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/delete_icon"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/_10sdp"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:text="Delete all chats"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:fontFamily="@font/andika_new_basic"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:textSize="@dimen/_13ssp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/delete_selected_chat"
            android:layout_weight="1"
            android:padding="@dimen/_2sdp"
            android:layout_marginStart="@dimen/_10sdp"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"

            android:text="Delete selected chats"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:fontFamily="@font/andika_new_basic"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:textSize="@dimen/_13ssp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/unfriend_icon"
            android:layout_weight="1"
            android:padding="@dimen/_2sdp"
            android:layout_marginStart="@dimen/_10sdp"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:text="Remove friend"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:fontFamily="@font/andika_new_basic"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:textSize="@dimen/_13ssp"/>

    </LinearLayout>

</LinearLayout>